@import "../../../node_modules/magnific-popup/dist/magnific-popup.css"

.photos
  margin-top: 48px
  cf()

.photo
  float: left
  position: relative
  
  &:before, &:after
    content: ''
    display: block
    position: absolute
    opacity: 0
    transition: all .1s ease-out

  &:before
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: rgba(#000, 0.35)
    border: 2px solid $yellow

  &:after
    sprite('../../sprite/sprite-zoom.png')
    top: 50%
    left: 50%
    margin-left: calc(image-width('../../sprite/sprite-zoom.png') / -2)
    margin-top: calc(image-height('../../sprite/sprite-zoom.png') / -2)

  &:hover
    &:before, &:after
      opacity: 1
  
  img
    display: block

.more
  display: none

  &_active
    display: block

  &_button
    width: 390px
    height: 230px
    line-height: 230px
    background: $grey200
    text-align: center
    opacity: .7
    transition: all .1s ease-out
    cursor: pointer

    &:hover
      opacity: 1
      &:before, &:after
        opacity: 0


.text
  line-height: 1.2
  vc()

  &:before
    content: ''
    display: block
    margin: 10px auto
    sprite('../../sprite/sprite-plus.png')