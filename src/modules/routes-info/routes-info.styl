.block
  padding: 38px 53px 0

.cols
  cf()

.col
  float: left
  width: 50%

.title
  font-size: 16px
  font-weight: bold
  margin-bottom: 15px

.bullet
  position: relative
  font-size: 14px
  line-height: 1.55
  padding-left: 16px
  margin-bottom: 8px
  padding-right: 60px

  &:before
    content: ' '
    position: absolute
    left: 0
    top: 8px
    display: block
    width: 7px
    height: 7px
    border-radius: 50%
    background: $black

.button
  float: left
  margin: 40px 60px 0 0

.text
  float: left
  line-height: 2
  font-size: 14px

.big
  font-size: 16px
  font-weight: bold