.header
  position: fixed
  background-color: rgba(#000, 0.5)
  left: 0
  top: 0
  width: 100%
  height: 80px
  line-height: 80px
  z-index: 10
  color: $white

.menu_and_logo
  span(9)
  text-align: right

.logo
  float: left
  &_image
    vc()
    sprite('../../sprite/sprite-logo.png')

.item
  vc()
  font-size: 13px
  margin-left: 25px
  text-transform: uppercase

.phones
  span(2)
  text-align: right

.phone
  font-size: 18px
  font-weight: bold

.code
  font-size: 12px
  font-weight: normal
  display: inline

.type
  text-align: center
  font-size: 12px
  margin-top: 3px

.fos
  span(1)
  text-align: center

.call
  vc()
  sprite('../../sprite/sprite-phone.png')